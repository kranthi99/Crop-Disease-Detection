<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantDisease">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/plantname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Plant Name :"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/plantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/plantname1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/diseasename1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="Disease Name :"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/diseasename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/diseasename1"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/causativeOrganism1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:text="Causative Organism :"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/causativeOrganism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_below="@+id/causativeOrganism1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/irrigation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Irrigation :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/causativeOrganism"/>
        <TextView
            android:id="@+id/irrigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/irrigation1"
            />
    <TextView
        android:id="@+id/treatment_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Recovery Methods :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/irrigation"/>
    <TextView
        android:id="@+id/treatment_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:layout_weight="9"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/treatment_list1"
        />
    <TextView
        android:id="@+id/symptoms_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Symptoms :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/treatment_list"/>
    <TextView
        android:id="@+id/symptoms_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:layout_weight="9"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/symptoms_list1"
        />
        <TextView
            android:id="@+id/resistantVarients1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Resistant Varients :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/symptoms_list"/>
        <TextView
            android:id="@+id/resistantVarients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/resistantVarients1"
            />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>